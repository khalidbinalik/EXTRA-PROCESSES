<form id="add_edit_delete_form" method="post">
    <div class="col-12 text-center">
        <h6 class="text-warning">SELECT / ENTER THE PURIFIER NAME</h6>

        <input class="mx-auto d-flex justify-content-center" type="text" id="purifier" name="purifier" list="purifier_list"
            autocomplete="off">

        <datalist id="purifier_list">
            {{#each purifier_list}}
            <option value="{{this.name}}"></option>
            {{/each}}
        </datalist>

    </div>
    <br><br>
    <div class="col-2 mx-auto d-flex justify-content-center">
        <input class="btn btn-outline-success" style="font-weight: bold; width:200px; height:50px; font-size:75%;"
            type="submit" value="ADD" formaction="/office_data_entry/add_purifier">
    </div>
    <div class="col-2 mx-auto d-flex justify-content-center">
        <input class="btn btn-outline-warning" style="font-weight: bold; width:200px; height:50px; font-size:75%;"
            value="EDIT" onclick="show_edit_form()">
    </div>
    <div class="col-2 mx-auto d-flex justify-content-center">
        <input class="btn btn-outline-danger" style="font-weight: bold; width:200px; height:50px; font-size:75%;"
            type="submit" value="DELETE" formaction="/office_data_entry/delete_purifier">
    </div>
</form>

<div id="edit_form" style="display: none;">
    <form method="post">
        <div class="col-12 col-lg-7 mx-auto">
            <input class="form-control form-control-lg"
                style="text-align: center; text-decoration: black; font-weight: bold;" type="text" name="current_name"
                id="current_name" size="50px" readonly>
        </div>
        <br>
        <div class="col-12 col-lg-7 mx-auto">
            <input class="form-control form-control-lg text-uppercase"
                style="text-align: center; text-decoration: black; font-weight: bold;" type="text" name="new_name"
                id="new_name" size="50px" required>
        </div>
        <br>
        <div class="col-2 mx-auto d-flex justify-content-center">
            <input class="btn btn-outline-danger" style="font-weight: bold; width:200px; height:50px; font-size:75%;"
                type="submit" value="EDIT" formaction="/office_data_entry/edit_purifier">
        </div>
    </form>
</div>


<script>
    function show_edit_form() {
        if ($('#purifier').val()) {
            let current_name = $('#purifier').val();
            $('#current_name').val(current_name);
            $('#new_name').val(current_name);
            $('#edit_form').show();
        } else {
            alert("SELECT A NAME OF PURIFIER...!")
        }
    }
</script>